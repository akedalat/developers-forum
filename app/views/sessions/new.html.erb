<h1>Log in</h1>

<% if flash[:danger] %>
    <div class="alert"><%= flash[:danger] %></div>
  <% end %>

<%= form_tag("/login", method: "post") do %>
  <%= label_tag("Email") %>
  <%= email_field_tag(:email) %>

  <%= label_tag("Password") %>
  <%= password_field_tag(:password) %>
  <%= submit_tag("Login") %>
<% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
